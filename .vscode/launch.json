    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug WebApp",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 8080
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": true
        },
        {
            "name": "Debug WebApi",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 1234
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": true
        }
    ]
}
